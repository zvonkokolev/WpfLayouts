<Window x:Class="WpfLayouts.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayouts"
        mc:Ignorable="d"
        Title="StackPanel" Height="150" Width="300">
    <StackPanel x:Name="StackPanelWindow" Orientation="Horizontal">
        <StackPanel>
            <Label Content="Feld 1" HorizontalAlignment="Left" />
            <Label Content="Feld 2" HorizontalAlignment="Left" />
            <Label Content="Feld 3" HorizontalAlignment="Left" />
        </StackPanel>
        
        <StackPanel>
            <TextBox x:Name="txtBox1" Height="18" Width="100" Margin="20,5,0,0"/>
            <TextBox x:Name="txtBox2" Height="18" Width="100" Margin="20,8,0,0"/>
            <TextBox x:Name="txtBox3" Height="18" Width="100" Margin="20,8,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
